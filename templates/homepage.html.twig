{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
<div class="homepagehead">

<div class="row">
<img src="assets/img/logo-v2.png"style="width: 300px; heigfht: 100px;"/>
</div>
</div>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}

     
        
    <div class="row">
    <div class="col-6">
    {# Print #}
    <h1>Heading #1</h1>
    <h2>Heading #2</h2>
    <h3>Heading #3 t/m 5</h3>

    <h4>Dit is de template {{  title }}</h4>
    </div>
    </div>


<div class="row">
    {% for record in data %}
     <div class="col-6 dishes">
        <ul>
            <img src="assets/img/{{ record.dish.picture }}" style="width: 100px; heigfht: 100px;">

            {{ record.dish.title }}
            
            <ul>
                {% for ingr in record.dish.ingredients %}
                    <li>
                        <span {% if ingr.id < 2 %}style='color: #F00'{% endif %}>{{  ingr.name }}</span>

                        
                        {%  if ingr.id == 3 %}
                            <strong>Dit is ID 3!</strong>
                        {%  endif  %}
                    </li>
                {% endfor %}
                
                 
            </ul>
            
            </li> 
            <strong>{{ record.dish.short_description }}</strong>

        <ul> 
    </div>
    {% endfor %}
  
</div>

 
{% endblock %}













