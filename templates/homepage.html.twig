{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
<div class="row">
<div class="col-md-12 " style="background-image: url('assets/img/food.jpg');">
 <div class="topnav">
             <input type="text" placeholder="Search..">
               <a href="#placehold">Placehold</a>
        </div>
         <img src="assets/img/logo-v2.png" style=" width:400px "/> 
</div>
</div>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}

<div class="row">
    {% for record in data %}
     <div class="col-md-6 p-3 row-eq-height">
     <div class="border dishes shadow" >
        
        
            <img src="assets/img/{{ record.dish.picture }}" class="img-fluid imgfood" alt="Responsive image" style=" width:100% ">

            <h2 style="color:var(--darker-green);">{{ record.dish.title }} </h2>   
            <h2>{{ record.dish.rating }}</h2>
            
            

            <p>{{ record.dish.short_description }}</p><br>
            <p>
            <input type="button" name="dishbutton" value="Smullen!" class="smulbutton">
            {{ record.dish.calories }}
            {{ record.dish.price }}
            </p>

        
    </div>
    </div>
    {% endfor %}
  
</div>


 
{% endblock %}





